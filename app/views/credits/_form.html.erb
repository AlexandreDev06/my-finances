<%= form_with model: @credit do |f| %>
  <div class="form-group">
    <%= f.label :balance %>
    <%= f.select :user_id, @users.map { |u| [u.balance, u.id] }, {}, class: "form-select" %>
  </div>
  <div class="form-group">
    <%= f.label :nome %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
    <div class="form-group">
    <%= f.label :total %>
    <%= f.text_field :total, class: "form-control" %>
  </div>
    <div class="form-group">
    <%= f.label "Descrição" %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :data_de_pagamento %>
    <%= f.date_field :payment_at, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit :salvar, class: "btn btn-success" %>
  </div>
<% end %>
