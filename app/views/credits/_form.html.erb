<%= form_with model: @credit  do |f| %>
  <div class="cadaster-values">
    <div class="form-group col-md-5">
      <%= f.label :conta, class: "fs-5 text-light" %>
      <%= f.select :flux, [["Saldo Atual", :balance], ["Poupança", :saving]], {}, class: "form-select" %>
    </div>
    <hr>
    <div class="form-group col-md-5">
      <%= f.label :nome, class: "text-light fs-5" %>
      <%= f.text_field :name, class: "form-control", required: "required", placeholder: "Digite seu nome..." %>
    </div>
      <div class="form-group col-md-5">
      <%= f.label :total, class: "text-light fs-5" %>
      <%= f.text_field :total, class: "form-control", required: "required", placeholder: "Digite o valor..." %>
    </div>
      <div class="form-group col-md-5">
      <%= f.label "Descrição", class: "text-light fs-5" %>
      <%= f.text_field :description, class: "form-control", required: "required", placeholder: "Descreva o valor..." %>
    </div>
    <div class="form-group col-md-3">
      <%= f.label :data_de_pagamento, class: "text-light fs-5" %>
      <%= f.date_field :payment_at, class: "form-control", required: "required" %>
    </div>
    <div class="form-group">
      <%= f.submit :salvar, class: "btn btn-success mt-3" %>
    </div>
  </div>
<% end %>
