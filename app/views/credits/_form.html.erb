<%= form_with model: @credit do |f| %>
  <div class="form-group">

    <%= f.label :conta, class: "fs-5 text-light" %>
    <%= f.select :flux, [["Saldo Atual", :balance], ["Poupança", :saving]], {}, class: "form-select" %>
  </div>
  <hr>
  <div class="form-group">
    <%= f.label :nome, class: "text-light" %>
    <%= f.text_field :name, class: "form-control", required: "required" %>
  </div>
    <div class="form-group">
    <%= f.label :total, class: "text-light" %>
    <%= f.text_field :total, class: "form-control", required: "required" %>
  </div>
    <div class="form-group">
    <%= f.label "Descrição", class: "text-light" %>
    <%= f.text_field :description, class: "form-control", required: "required" %>
  </div>
  <div class="form-group col-md-3">
    <%= f.label :data_de_pagamento, class: "text-light" %>
    <%= f.date_field :payment_at, class: "form-control", required: "required" %>
  </div>
  <div class="form-group">
    <%= f.submit :salvar, class: "btn btn-success mt-3" %>
  </div>
<% end %>
