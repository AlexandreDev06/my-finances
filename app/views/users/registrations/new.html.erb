<div class="login-page-container">
  <div class="card box">
    <article class="card-body">
      <h4 class="card-title text-center mb-4 mt-1">Registrar</h4>
      <hr>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Digite seu Email..."  %>
          </div>
          <div class="field">
            <%= f.label "Senha" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caracters no minimo)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label "Confirme sua senha" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit "Cadastrar", class: "btn btn-success mt-3 me-3 mb-3 col-md-12" %>
            JÃ¡ tem uma conta? <%= link_to "Entre", new_session_path(resource_name), class: "link" %>
          </div>
        <% end %>
    </article>
  </div>
</div>
