<div class="row mb-4">
  <div class="col-md-6">
    <h3 class="text-center float-start text-light">Futuros Objetivos</h3>
  </div>
  <div class="col-md-6">
    <%= link_to new_future_goal_path, class: "float-end text-light btn btn-outline-secondary" do %>
      Novo objetivo <i class="bi bi-plus-lg text-light"></i>
    <% end %>
  </div>
</div>

<div class="row">

  <h1 class="text-uppercase fs-3 text-light">Urgentes</h1>
  <% @future_goals.urgent.each do |future_goal|%>
    <div class="card mx-2 mb-4 bg-light border border-danger border-5" style="width: 18rem;">
      <div class="card-body">
        <p class="card-title fs-4 text-dark"><%= future_goal.name.capitalize %></p>
        <hr class="text-dark">
        <label class="fw-bold">Link do produto: </label class="card-text"><a href="<%= future_goal.description %>" target="blank"><%= future_goal.description.truncate(40) %></a></label><br>
        <label class="card-text"> <%= number_to_currency(future_goal.total, unit: "R$", separator: ",", delimiter: ".") %></label><br>
        <label class="fw-bold">Data: </label> <label> <%= future_goal.ending_date.strftime("%d/%m/%Y") %></label>
      </div>
      <div class="card-body">
        <%= link_to 'Editar', edit_future_goal_path(future_goal), class: "text-decoration-none text-dark" %>
        <%= link_to 'Deletar', future_goal_path(future_goal), method: :delete, class: 'text-decoration-none text-dark float-end', data: { confirm: "Confirma memo?" } %>
      </div>
    </div>
  <% end %>
  <hr>

  <h1 class="text-uppercase fs-3 text-light">Necessários</h1>
  <% @future_goals.need.each do |future_goal|%>
    <div class="card mx-2 mb-4 bg-light border border-warning border-5" style="width: 18rem;">
      <div class="card-body">
        <p class="card-title fs-4 text-dark"><%= future_goal.name.capitalize %></p>
        <hr class="text-dark">
        <label class="fw-bold"> Link do produto: </label class="card-text"><a href="<%= future_goal.description %>" target="blank"><%= future_goal.description.truncate(40) %></a></label><br>
        <label class="card-text"> <%= number_to_currency(future_goal.total, unit: "R$", separator: ",", delimiter: ".") %></label><br>
        <label class="fw-bold">Data: </label> <label> <%= future_goal&.ending_date.strftime("%d/%m/%Y") %></label>
      </div>
      <div class="card-body">
        <%= link_to 'Editar', edit_future_goal_path(future_goal), class: "text-decoration-none text-dark" %>
        <%= link_to 'Deletar', future_goal_path(future_goal), method: :delete, class: 'text-decoration-none text-dark float-end', data: { confirm: "Confirma memo?" } %>
      </div>
    </div>
  <% end %>

  <hr>
  <h1 class="text-uppercase fs-3 text-light">Não Necessários</h1>
  <% @future_goals.no_need.each do |future_goal|%>
    <div class="card mx-2 mb-4 bg-light border border-dark border-5" style="width: 18rem;">
      <div class="card-body">
        <p class="card-title fs-4 text-dark"><%= future_goal.name.capitalize %></p>
        <hr class="text-dark">
        <label class="fw-bold">Link do produto: </label class="card-text"><a href="<%= future_goal.description %>" target="blank"><%= future_goal.description.truncate(40) %></a></label><br>
        <label class="card-text"> <%= number_to_currency(future_goal.total, unit: "R$", separator: ",", delimiter: ".") %></label><br>
        <label class="fw-bold">Data: </label> <label> <%= future_goal.ending_date.strftime("%d/%m/%Y") %></label>
      </div>
      <div class="card-body">
        <%= link_to 'Editar', edit_future_goal_path(future_goal), class: "text-decoration-none text-dark" %>
        <%= link_to 'Deletar', future_goal_path(future_goal), method: :delete, class: 'text-decoration-none text-dark float-end', data: { confirm: "Confirma memo?"} %>
      </div>
    </div>
  <% end %>
</div>
