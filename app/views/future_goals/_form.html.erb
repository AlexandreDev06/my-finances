<%= form_with model: @future_goal do |form| %>
  <div class="form-group">
    <%= form.label :selecione_a_prioridade, class: "text-light" %>
    <%= form.select :priority, [["Não necessário", :no_need], ["Necessário", :need], ["Urgente", :urgent]], {}, class: "form-select" %>
  </div>
  <div class="form-group">
    <%= form.label :nome, class: "text-light" %>
    <%= form.text_field :name, class: "form-control", required: "required" %>
  </div>
  <div class="form-group">
    <%= form.label :descricao, class: "text-light" %>
    <%= form.text_field :description, class: "form-control", required: "required" %>
  </div>
  <div class="form-group">
    <%= form.label :total, class: "text-light" %>
    <%= form.number_field :total, class: "form-control", required: "required" %>
  </div>
  <div class="form-group col-md-3 mb-3">
    <%= form.label :data_de_compra, class: "text-light" %>
    <%= form.date_field :ending_date, class: "form-control" %>
  </div>
  <%= form.submit 'Salvar', disable_with: 'Salvando...', class: "btn btn-success" %>
<% end %>