<%= form_with model: @loan  do |form| %>
  <div class="cadaster-values offset-4">
    <div class="form-group col-md-5">
      <%= form.hidden_field :user_id, value: current_user.id %>
      <%= form.label :name, 'Nome', class: "fs-5 text-light" %>
      <%= form.text_field :name, class: "form-control", required: 'required', placeholder: "Digite o nome para quem foi emprestado..." %>
    </div>
    <div class="form-group col-md-5">
      <%= form.label :description, 'Descrição', class: "fs-5 text-light" %>
      <%= form.text_field :description, class: "form-control", required: 'required', placeholder: "De uma descrição para o emprestimo..." %>
    </div>
    <div class="form-group col-md-5">
      <%= form.label :value, 'Valor', class: "fs-5 text-light" %>
      <%= form.text_field :value, class: "form-control", required: 'required', placeholder: "R$" %>
    </div>
    <div class="form-group col-md-5">
      <%= form.label :installment, 'Quantidade de parcelas', class: "fs-5 text-light" %>
      <%= form.number_field :installment, class: "form-control", required: 'required', placeholder: "Ex: 3x..." %>
    </div>
    <div class="form-group col-md-5">
      <%= form.label :percentage, 'Porcentagem de juros', class: "fs-5 text-light" %>
      <%= form.number_field :percentage, class: "form-control", required: 'required', placeholder: "0%" %>
    </div>
    <div class="form-group col-md-3 mb-3">
      <%= form.label :data_de_pagamento, 'Data de pagamento', class: "fs-5 text-light" %>
      <%= form.date_field :date_payment, class: "form-control", required: "required" %>
    </div>
    <%= form.submit 'Salvar', disable_with: 'Salvando...', class: "btn btn-success col-md-5" %>
  </div>
<% end %>