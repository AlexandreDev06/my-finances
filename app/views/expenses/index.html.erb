<h1 class="mb-4">Detalhes</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Tipo</th>
      <th scope="col">Nome</th>
      <th scope="col">Descrição</th>

      <th scope="col">Valor</th>
      <th scope="col">Dia de pagamento</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td>Despesas</td>
        <td><%= expense.name %></td>
        <td class="text-danger"><%= number_to_currency(expense.total, unit: "R$", separator: ",", delimiter: ".") %></td>
        <td><%= expense.payment_at.strftime("%d/%m/%Y") %></td>
        <td class="icons">
          <%= link_to edit_expense_path(expense) do %>
            <i class="bi bi-pencil me-3 "></i>
          <% end %>
            <span class="ms-3"></span>
          <%= link_to expense_path(expense), method: :delete, data: { confirm: "Deseja deletar %{expense.name}" } do %>
              <i class="bi bi-trash "></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>