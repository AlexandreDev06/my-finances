<div class="row mb-4">
  <div class="col">
    <h3 class="text-light">Detalhes</h3>
  </div>
  <div class="col offset-md-8">
    <%= link_to new_expense_path, class: "btn btn-outline-secondary text-light" do %>
      Nova Despesa <i class="bi bi-plus-lg text-light"></i>
    <% end %>
  </div>
</div>
<table class="table table-default">
  <thead>
    <tr>
      <th scope="col">Tipo</th>
      <th scope="col">Nome</th>
      <th scope="col">Descrição</th>
      <th scope="col">Valor</th>
      <th scope="col">Dia de pagamento</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.flux.capitalize %></td>        
        <td><%= expense.name %></td>
        <td><%= expense.description %></td>
        <td class="text-danger"><%= number_to_currency(expense.total, unit: "R$", separator: ",", delimiter: ".") %></td>
        <td><%= expense.payment_at&.strftime("%d/%m/%Y") %></td>
        <td class="icons">
          <%= link_to edit_expense_path(expense) do %>
            <i class="bi bi-pencil me-3"></i>
          <% end %>
          <span class="ms-3"></span>
          <%= link_to expense_path(expense), data: { confirm: "confirm?" }, method: :delete do %>
            <i class="bi bi-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
