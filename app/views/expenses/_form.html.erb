<%= form_with model: @expense do |f| %>
  <div class="form-group">
    <%= f.label :balance %>
    <%= f.label :user_id, @user.balance, class: "fs-2 text-success ms-5" %>
  </div>
  <hr>
  <div class="form-group">
    <%= f.label :nome %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
    <div class="form-group">
    <%= f.label :total %>
    <%= f.text_field :total, class: "form-control" %>
  </div>
    <div class="form-group">
    <%= f.label "Descrição" %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :data_de_pagamento %>
    <%= f.date_field :payment_at, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit :salvar, class: "btn btn-success" %>
  </div>
<% end %>
